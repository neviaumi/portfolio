---
import {Page, Main} from "../components/react/PageContainer"
import NavigationBar, {DrawerToggleButton} from '../components/react/NavigationBar.tsx';
import ResumeLoader from "../components/resume/react/ResumeLoader.tsx"
import Layout from '../layouts/Layout.astro';
import OverlayButtons from "../components/react/OverlayButtons";

const title = "Resume"
---

<Layout title={title} description="Explore David's resume, highlighting his skills and experience. Learn more about his professional background and qualifications.">
    <script slot="extra" src="https://neviaumi.github.io/resume.json/json-resume.element.js" type="module" async defer/>
    <Page>
        <NavigationBar title={title}>
            <DrawerToggleButton client:load slot="drawer" title={title}/>
        </NavigationBar>
        <Main>
            <ResumeLoader client:load/>
            <OverlayButtons client:load/>
        </Main>
    </Page>

</Layout>