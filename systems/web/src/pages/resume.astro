---
import {Page, Main} from "../components/react/PageContainer"
import NavigationBar from '../components/react/NavigationBar.tsx';
import Layout from '../layouts/Layout.astro';
import BottomOverlay from "../components/react/BottomOverlay";
import Typography from "@mui/material/Typography";
import React from "react";
const title = "Resume"
const resumeJsonUrl = new URL("portfolio/resume.json",Astro.url.origin).toString()
---

<Layout title={title} description="Explore David's resume, highlighting his skills and experience. Learn more about his professional background and qualifications.">
    <script is:inline slot="extra" src="https://neviaumi.github.io/resume.json/json-resume.element.js" type="module" async defer/>
    <Page>
        <NavigationBar client:load title={title}/>

        <Main>
            <json-resume src={resumeJsonUrl}>
                <a
                        href="https://neviaumi.github.io/portfolio/resume.pdf"
                        rel="noreferrer"
                        slot="pdf-version-navigate-link"
                        style={{
                            alignItems: 'center',
                            display: 'flex',
                            gap: '1rem',
                            textDecorationLine: 'none',
                            color: '#000',
                            fontFamily: "Roboto",
                            fontSize: "1.125rem",
                            lineHeight: "1.75rem",
                            fontStyle: "normal",
                            fontWeight: 500
                        }}
                        target="_blank"
                        title="Open PDF"
                >
                    <svg
                            fill="currentColor"
                            height="24px"
                            viewBox="0 -960 960 960"
                            width="24px"
                            xmlns="http://www.w3.org/2000/svg"
                    >
                        <path d="M360-460h40v-80h40q17 0 28.5-11.5T480-580v-40q0-17-11.5-28.5T440-660h-80v200Zm40-120v-40h40v40h-40Zm120 120h80q17 0 28.5-11.5T640-500v-120q0-17-11.5-28.5T600-660h-80v200Zm40-40v-120h40v120h-40Zm120 40h40v-80h40v-40h-40v-40h40v-40h-80v200ZM320-240q-33 0-56.5-23.5T240-320v-480q0-33 23.5-56.5T320-880h480q33 0 56.5 23.5T880-800v480q0 33-23.5 56.5T800-240H320Zm0-80h480v-480H320v480ZM160-80q-33 0-56.5-23.5T80-160v-560h80v560h560v80H160Zm160-720v480-480Z" />
                    </svg>
                    PDF Version
                </a>
            </json-resume>
            <BottomOverlay client:load/>
        </Main>
    </Page>

</Layout>